<odoo>
    <!-- Define the Tree View -->
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree string="My Model">
                <field name="name" />
                <field name="gender"/>
            </tree>
        </field>
    </record>


     <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form string="My Model">
                <sheet>
                    <group>
                        <field name="name" optional="1"/>
                        <field name="gender"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View Definition -->
    <record id="view_my_model_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search string="My Model Search">
                <field name="name"/>
                <!-- You can add more fields to search here -->
                
                <!-- Group By Option -->
                <group expand="0" string="Group By">
                    <filter string="Name" name="group_by_name" context="{'group_by':'name'}"/>
                    <!-- Add more group by options if needed -->
                    <filter string="Gender" name="group_by_name" context="{'group_by':'gender'}"/>
                    <!-- Add more group by options if needed -->
                </group>
            </search>
        </field>
    </record>

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"

    />



</odoo>